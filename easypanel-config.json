{
  "name": "neosale-crm",
  "description": "NeoSale CRM - Sistema de Gest√£o de Leads",
  "type": "docker",
  "image": "brunobspaiva/neosale-crm:latest",
  "port": 3000,
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "HOSTNAME": "0.0.0.0",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_PUBLIC_API_URL": "https://evolution-api-neosale-api.mrzt3w.easypanel.host/api"
  },
  "domains": [
    {
      "host": "neosale-crm.seu-dominio.easypanel.host",
      "port": 3000,
      "https": true
    }
  ],
  "volumes": [],
  "restart": "unless-stopped",
  "resources": {
    "memory": "512Mi",
    "cpu": "0.5"
  },
  "healthcheck": {
    "enabled": true,
    "path": "/",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "scaling": {
    "min": 1,
    "max": 3,
    "target_cpu": 70
  },
  "labels": {
    "app": "neosale-crm",
    "version": "latest",
    "environment": "production"
  }
}