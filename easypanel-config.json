{
  "name": "neosale-crm",
  "description": "NeoSale CRM Admin",
  "type": "docker",
  "image": "brunobspaiva/neosale-crm:latest",
  "domains": [
    {
      "host": "neosale-crm.seu-dominio.easypanel.host",
      "port": 3000,
      "https": true
    }
  ],
  "volumes": [],
  "restart": "unless-stopped",
  "resources": {
    "memory": "512Mi",
    "cpu": "0.5"
  },
  "healthcheck": {
    "enabled": true,
    "path": "/",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "scaling": {
    "min": 1,
    "max": 3,
    "target_cpu": 70
  },
  "labels": {
    "app": "neosale-crm",
    "version": "latest"
  }
}